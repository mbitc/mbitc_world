<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="d-flex h-100 text-center text-white bg-dark">
    
    <div class="container-sm d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header>
        <%- include('../partials/header'); %>
    </header>
    
      <main class="container">
          <div class="row align-items-center">
              <div class="col"></div>
              <div class="col">
                <form name="contactsForm" method="post" action="/text">
                <h1 class="h3 mb-3 fw-normal">Write something</h1>
                <label for="inputEmail" class="visually-hidden">Email address</label>
                <input type="email" name="email" class="form-control" placeholder="Email address" required autofocus>
                <label for="inputText" class="visually-hidden">Text</label>
                <textarea type="text" name="text" class="form-control" placeholder="Text" required></textarea>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Send</button>
                </form>
              </div>
                <div class="col"></div>
        </div>
      </main>
    
      <footer>
        <%- include('../partials/footer'); %>
    </footer>
    </div>
        
    </body>
</html>